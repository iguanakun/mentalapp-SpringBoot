<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- プロジェクト全体でSummaryJavadocチェックを無効化 -->
    <suppress checks="SummaryJavadoc" files=".*\.java$"/>
    <!-- user_memo_list パッケージの命名規則警告を無効化 -->
    <suppress checks="PackageName" files=".*[/\\]com[/\\]mentalapp[/\\]user_memo_list[/\\].*\.java$"/>
</suppressions>